<nav
  class="sticky top-0 inset-x-0 w-full dark:bg-black/70 bg-white/70 backdrop-blur-sm z-50 py-5"
>
  <ul class="text-center text-xl flex flex-wrap gap-5 items-center">
    {%- for item in collections.pages -%}
    <li>
      <a
        class="p-2 dark:text-white text-black underline-offset-2 {% if page.url == item.url %}underline decoration-wavy font-semibold decoration-[#eb4888]{% else %}hover:underline decoration-[#24d05a]{% endif %}"
        href="{{ item.url }}"
        >{{ item.data.title }}</a
      >
    </li>
    {%- endfor -%}
  </ul>
</nav>
